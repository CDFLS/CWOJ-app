<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cwoj.tk.cwoj.LoginActivity"
    android:background="@color/backGround">

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView"
        android:layout_gravity="bottom|center_horizontal"
        app:cardCornerRadius="@dimen/NCcardCornerRadiu"
        app:cardElevation="@dimen/cardElevation"
        android:layout_marginBottom="@dimen/betweenNCandOther"
        android:layout_marginTop="@dimen/betweenNCandOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/betweenNCandOther"
            android:id="@+id/ncFloat"
            tools:background="@drawable/nc_anim1"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_author"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"/>
</RelativeLayout>
